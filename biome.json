{
	"$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
	"files": {
		"ignore": [
			"node_modules/**",
			".next/**",
			"public/**",
			"external_imports/**",
			"pnpm-lock.yaml"
		]
	},
	"formatter": {
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false
		}
	}
}
